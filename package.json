{
  "name": "folklore",
  "version": "0.0.1",
  "description": "a retelling of folktale, early, use at your own peril",
  "author": "Cassidy Spring <79487947+cassiecascade@users.noreply.github.com>",
  "license": "MPL-2.0",
  "homepage": "https://github.com/cassiecascade/folklore#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cassiecascade/folklore.git"
  },
  "bugs": {
    "url": "https://github.com/cassiecascade/folklore/issues"
  },
  "main": "dist/folklore.js",
  "types": "dist/folklore.d.ts",
  "scripts": {
    "clean": "houseplant clean",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "start": "tsc -p tsconfig.build.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --coverage",
    "format": "sunbeams format",
    "check:format": "sunbeams format --check",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "houseplant": "^0.1.0",
    "jest": "^29.5.0",
    "sunbeams": "^0.5.6",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "/src/sunbeams.ts",
      "/tasks/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ]
  }
}
